<p style="color: green"><%= notice %></p>

<div class="card">
  <div class="card-header">
    <%= @article.name %>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= @article.published %></h5>
    <p class="card-text"><%= @article.description %></p>
    <div class="col-md-8">
      <div class="row">
        <div class="col-md-3">
          <%= link_to "Edit", edit_article_path(@article), class: "btn btn-warning" %>
        </div>
        <div class="col-md-3">
          <%= link_to "Back", articles_path, class: "btn btn-primary" %>
        </div>
        <div class="col-md-3">
          <%= button_to "Destroy", @article, method: :delete, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>
